cmake_minimum_required (VERSION 2.6)
project (SMC) 

# The version number
set (SMC_VERSION_MAJOR 1)
set (SMC_VERSION_MINOR 0)

# configure a header file to pass some of the CMake settings
# to the source code
configure_file (
  "${PROJECT_SOURCE_DIR}/SMCConfig.h.in"
  "${PROJECT_BINARY_DIR}/SMCConfig.h"
  )

include_directories("${PROJECT_BINARY_DIR}")

# add the executable
add_executable(POSOM, smc_call.cxx)

